<div class='form-style-2 box mx-3'>
  <div class='form-style-2-heading'>Provide your job information</div>
  <form class='add-job-form form'>
    <label for='field1'><span>Company
        <span class='required'>*</span></span><input
        type='text'
        class='input-field input'
        name='field1'
        value=''
        id='company-add'
      /></label>
    <label for='field2'><span>Position
        <span class='required'>*</span></span><input
        type='text'
        class='input-field input'
        name='field2'
        value=''
        id='position-add'
      /></label>
    <label class='field2'><span>Salary Amount<span
          class='required'
        >*</span></span>
      <input
        class='input-field input'
        type='text'
        name='field2'
        id='currency-field'
        pattern='^\$\d{1,3}(,\d{3})*(\.\d+)?$'
        value=''
        data-type='currency'
        placeholder='$1,000,000.00'
        class='input-field'
      /></label>
    <label for='field5'><span>Job Description
        <span class='required'>*</span></span><textarea
        name='field5'
        class='textarea-field'
        id='desc-add'
      ></textarea></label>

    <button
      class='btn btn-primary button is-warning'
      id='btn'
      type='submit'
    >Submit</button>
  </form>
</div>
<script type='text/javascript'>
  $(document).ready(function(){ $("#btn").click(function() { Swal.fire({ title:
  'Thank you for contributing to LumoGrindz', width: 600, padding: '3em',
  color: '#716add',
   backdrop: `
  rgba(0,0,123,0.4)
   url("/images/flying-bee.gif") left top no-repeat ` }) }) });
</script>
<script src='./js/addJob.js'></script>